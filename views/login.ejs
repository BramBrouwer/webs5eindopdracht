<!-- views/login.ejs -->
<% include partials/core/head.ejs %>
    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">
                <h1><span class="fa fa-sign-in"></span>Local Login</h1>
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <!-- LOGIN FORM -->
                <form action="/login" method="post">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password">
                    </div>

                    <button type="submit" class="btn btn-warning btn-lg">Login</button>
                </form>

                <hr>
                <p>Login or Register with:</p>
                <a href="/login/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a>
                <a href="/login/twitter" class="btn btn-info"><span class="fa fa-twitter"></span> Twitter</a>

            </div>
<% include partials/core/footer %>