<!-- views/races.ejs -->
<% include ../../partials/core/head %>
<% include ../../partials/core/navbar %>
<div class="col-sm-9 col-sm-offset-1">
    <h1 class="col-sm-offset-4"><span class="fa fa-flag-checkered"></span> Races</h1>
    <% var newrow = true; %>
    <% for (var i=0; i < races.length;i++) { %>
        <% if (newrow) { %>
            <div class="row">
                <div class="col-sm-5" style="border-right:2px solid black">
                    <div class="col-xs-4"><%= races[i].name %></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Info</a></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Edit</a></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Delete</a></div>
                </div>
            <% newrow = false; %>
        <% }else{ %>
                <div class="col-sm-5">
                    <div class="col-xs-4"><%= races[i].name %></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Info</a></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Edit</a></div>
                    <div class="col-xs-2"><a href="races/<%= races[i]._id %>">Delete</a></div>
                </div>
            </div>
            <% newrow = true; %>
        <% } %>
    <% } %>
</div>
<% include ../../partials/core/footer %>