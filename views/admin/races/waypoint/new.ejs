<!-- views/index.ejs -->
<% include ../../../partials/core/head %>
<% include ../../../partials/core/navbar %>
<div class="container">
    <div class="row">
        <div class="col-md-6">

            <div class="jumbotron text-center">
                <h1>Add a waypoint</h1>
            </div>
            
            <!-- LOGIN FORM -->
            <form action="/races/<%= raceid %>/waypoints" method="post">
                <div class="form-group">
                    <label>Google id</label>
                    <input type="text" class="form-control" name="googleid">
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Add waypoint</button>
            </form>
        </div>
        <div class="col-md-6 text-center">
        <div class="row">
            <form action="/places" method="post">
                <h1 class="page-header">Google Places<h1>
                <div class="col-lg-12">
                    <input name="raceid" type="hidden" value="<%= raceid %>">
                    <input name="user" type="hidden" value="<%= user %>">
                    <input name="location" type="text" class="form-control" placeholder="Location ...(longitude,latitude)">
                    <input name="radius" type="text" class="form-control" placeholder="Radius ...">
                    <div class="input-group">
                        <input name="paging" type="text" class="form-control" placeholder="Paging ...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Go!</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <br />
        <div class="col-md-3">Name</div>
        <div class="col-md-3">ID</div>
        <hr />
            <% for(var i=0;i < places.length;i++){ %>
                <div class="row">
                    <div class="col-sm-3"><%= places[i].name %></div>
                    <div class="col-sm-3"><%= places[i].id %></div>
                </div>
                <hr />
            <% } %>
        </div>
    </div>
</div>
<% include ../../../partials/core/footer %>