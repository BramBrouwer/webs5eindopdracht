<!-- views/races.ejs -->
    <% include partials/head %>
    <% include partials/navbar %>
            <div class="col-sm-6 col-sm-offset-3">
                <h1><span class="fa fa-flag-checkered"></span> Races</h1>
                <% var newrow = true; %>
                <% for (var i=0; i < races.length;i++) { %>
                    <% if (newrow) { %>
                        <div class="row">
                            <div class="col-sm-6" style="border-right:2px solid black">
                                <div class="col-xs-6"><%= races[i].name %></div>
                                <div class="col-xs-6"><a href="races/<%= races[i]._id %>">Info</a></div>
                            </div>
                        <% newrow = false; %>
                    <% }else{ %>
                            <div class="col-sm-6">
                                <div class="col-xs-6"><%= races[i].name %></div>
                                <div class="col-xs-6"><a href="races/<%= races[i]._id %>">Info</a></div>
                            </div>
                        </div>
                        <% newrow = true; %>  
                    <% } %>
                <% } %>
            </div>
<% include partials/footer %>